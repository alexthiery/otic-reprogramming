#!/usr/bin/env nextflow

manifest {
  name = 'alexthiery/otic-reprogramming'
  author = 'Alex Thiery'
  homePage = 'https://github.com/alexthiery/otic-reprogramming/tree/dev/workflows/scRNAseq_alignment'
  description = 'Nextflow pipeline to run smartseq2 single cell RNA-seq alignment'
  nextflowVersion = '20.07.1'
  mainScript = 'main.nf'
  defaultBranch = 'dev'
}

// Load base.config by default for all pipelines
includeConfig "$baseDir/configs/base.config"

// Load module default params
includeConfig "$baseDir/luslab-nf-modules/configs/module-defaults.config"

// Load scRNAseq alignment process params
includeConfig "$baseDir/workflows/scRNAseq_alignment/configs/local.config"

// Create run profiles
profiles {
  crick { includeConfig "$baseDir/workflows/scRNAseq_alignment/configs/crick.config"}
  local { includeConfig "$baseDir/workflows/scRNAseq_alignment/configs/local.config"}
}

