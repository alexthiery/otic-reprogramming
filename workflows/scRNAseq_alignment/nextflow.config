#!/usr/bin/env nextflow

includeConfig "$baseDir/../../luslab-nf-modules/configs/module-defaults.config"
params.outdir = './results'
docker.enabled = true

params {
    modules {
        'samtools_sort' {
            args             = ""
            suffix           = ".bam"
            publish_dir      = "samtools_sort"
            publish_results  = "all"
        }
        'samtools_view_a' {
            args             = "-b"
            suffix           = ".bam"
            publish_dir      = "samtools_view"
            publish_results  = "all"

        }
        'samtools_view_b' {
            args             = "-h -b -F 4 -q 10"
            suffix           = ".bam"
            publish_dir      = "samtools_view"
            publish_results  = "all"
        }
    }
}